<!DOCTYPE html>
<html style="height: auto;" lang="pt-br">

<% include ../componentes/head %>

<body style="height: auto;">

    <% include ../componentes/clienteNavegacao %>
    <section class="container" style="min-height: 400px;">
        
        <h1 class="text-center">Itens no Carrinho</h1>

        <% var total = 0; %>
        <% for(var i=0; i < itens.length; i++) { %>
        <% total += itens[i].preco %>
        <div class="row" style="margin: 10px 0px; padding: 15px 0px; border: 1px solid #bababa; border-radius: 10px;">
            <div class="col-sm-6">
                <div>Produto #<%= i+1 %>: <%= itens[i].nome %></div>
            </div>
            <div class="col-sm-6">
                <div>R$ <%= itens[i].preco %></div>
            </div>
        </div>
        <% } %>

        <div>Total: R$ <%= total %></div>
    
    </section>

    <% include ../componentes/footer %>
</body>
</html>