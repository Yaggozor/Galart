<!DOCTYPE html>
<html style="height: auto;" lang="pt-br">

<% include ../componentes/catalogoHead %>

<body style="height: auto;">

    <% include ../componentes/catalogoClienteNavegacao %>

    <section class="container" style="margin-top: 50px; margin-bottom: 50px; min-height: 400px;">
        <h1>Histórico de Compras</h1>
        
        <% for(var i=0; i < data.length; i++){ %>
            <div class="row" style="background-color: #fff; margin: 15px; padding: 15px; border: 1px solid #666; border-radius: 10px;">
                
                <div class="col-sm-12" style="margin-bottom: 15px; border-bottom: 1px solid #333;">
                    <p>Código da Compra: #<%= data[i]._id %></p>
                </div>
                
                <% for(var j=0; j < data[i].itens.length; j++){ %>
                <div class="col-sm-4">
                    <p>Item <%= j+1 %>: <%= data[i].itens[j].nome %></p>
                    <p>Preço: R$ <%= data[i].itens[j].preco %>,00</p>
                </div>
                <% } %>
                <div class="col-sm-12" style="margin-bottom: 15px; border-bottom: 1px solid #333;">
                    <p>Valor total da compra: <%= data[i].value %></p>
                </div>

                <div class="col-sm-12">
                    <p>Endereço: <%= data[i].street %>, <%= data[i].number %> - <%= data[i].district %></p>
                </div>
                <div class="col-sm-12">
                    <p><%= data[i].city %> - <%= data[i].state %> - <%= data[i].postal_code %></p>
                </div>
                <div class="col-sm-6">
                    <p>Tel.: (<%= data[i].area_code %>) <%= data[i].phone %></p>
                </div>

                <div class="col-sm-6">
                    <p>Forma de pagamento: <%= data[i].method %></p>
                </div>
            </div>
        <% } %>
    </section>

    <% include ../componentes/catalogoFooter %>
</body>
</html>