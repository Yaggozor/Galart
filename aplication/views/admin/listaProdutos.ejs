<!DOCTYPE html>
<html style="height: auto;" lang="pt-br">

<% include ../componentes/head %>

<body style="height: auto;">

    <% include ../componentes/adminNavegacao %>
    
    <section class="container" style="margin-top: 50px; min-height: 400px;">
        
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Tamanho</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Descrição</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(let l=0; l<data.length; l++){ %>
                <tr>
                    
                    <td><%= data[l].nome %></td>
                    <td><%= data[l].tipo %></td>
                    <td><%= data[l].foto %></td>
                    <td><%= data[l].tamanho %></td>
                    <td><%= data[l].preco %></td>
                    <td><%= data[l].descricao %></td>
                    
                    <td>
                        <form style="display:inline" action="/admin/edicaoProduto" method="post">
                            <input type="text" style="display:none" class="form-control" value="<%= data[l]._id %>" id="_id-produto" name="_id" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].nome %>" id="nome-produto" name="nome" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].tipo %>" id="tipo-produto" name="tipo" />
                            <input type="file" style="display:none" class="form-control-file" value="<%= data[l].foto %>" id="foto-produto" name="foto" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].tamanho %>" id="tamanho-produto" name="tamanho" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].preco %>" id="preco-produto" name="preco" />
                            <textarea style="display:none" class="form-control" id="descricao-produto" rows="3" name="descricao"><%= data[l].descricao %></textarea>

                            <button class="btn btn-success right" type="submit">Editar</button>
                        </form>

                        <form style="display:inline" action="/admin/exclusaoProduto" method="post">
                            <input type="text" style="display:none" class="form-control" value="<%= data[l]._id %>" id="_id-produto" name="_id" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].nome %>" id="nome-produto" name="nome" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].tipo %>" id="tipo-produto" name="tipo" />
                            <input type="file" style="display:none" class="form-control-file" value="<%= data[l].foto %>" id="foto-produto" name="foto" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].tamanho %>" id="tamanho-produto" name="tamanho" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[l].preco %>" id="preco-produto" name="preco" />
                            <textarea style="display:none" class="form-control" id="descricao-produto" rows="3" name="descricao"><%= data[l].descricao %></textarea>

                            <button class="btn btn-danger right" type="submit">Excluir</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>        

        <% for(var i=0; i < data.length/3; i++){ %>
        <div class="row">
            <% for(var j=0; j < 3; j++){ %>
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%  %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>
    </section>

    <% include ../componentes/footer %>
</body>
</html>