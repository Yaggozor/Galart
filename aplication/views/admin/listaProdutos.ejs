<!DOCTYPE html>
<html style="height: auto;" lang="pt-br">

<% include ../componentes/head %>

<body style="height: auto;">

    <% include ../componentes/adminNavegacao %>
    
    <section class="container" style="margin-top: 50px; min-height: 400px;">
        
        <div class="row">
            <% for(var i=0; i < data.length; i++){ %>
            <div class="col-sm-4">
                <div class="card">
                    <img src="/imgs/<%= data[i].foto %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= data[i].nome %></h5>
                        <div>Categoria: <%= data[i].tipo %></div>
                        <p class="card-text"><%= data[i].descricao %></p>
                        <div>Tamanho: <%= data[i].tamanho %></div>
                        <div>R$ <%= data[i].preco %>,00</div>
                        
                        <form style="display:inline" action="/admin/edicaoProduto" method="post">
                            <input type="text" style="display:none" class="form-control" value="<%= data[i]._id %>" id="_id-produto" name="_id" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].nome %>" id="nome-produto" name="nome" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].tipo %>" id="tipo-produto" name="tipo" />
                            <input type="file" style="display:none" class="form-control-file" value="<%= data[i].foto %>" id="foto-produto" name="foto" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].tamanho %>" id="tamanho-produto" name="tamanho" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].preco %>" id="preco-produto" name="preco" />
                            <textarea style="display:none" class="form-control" id="descricao-produto" rows="3" name="descricao"><%= data[i].descricao %></textarea>

                            <button class="btn btn-success right" type="submit">Editar</button>
                        </form>

                        <form style="display:inline" action="/admin/exclusaoProduto" method="post">
                            <input type="text" style="display:none" class="form-control" value="<%= data[i]._id %>" id="_id-produto" name="_id" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].nome %>" id="nome-produto" name="nome" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].tipo %>" id="tipo-produto" name="tipo" />
                            <input type="file" style="display:none" class="form-control-file" value="<%= data[i].foto %>" id="foto-produto" name="foto" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].tamanho %>" id="tamanho-produto" name="tamanho" />
                            <input type="text" style="display:none" class="form-control" value="<%= data[i].preco %>" id="preco-produto" name="preco" />
                            <textarea style="display:none" class="form-control" id="descricao-produto" rows="3" name="descricao"><%= data[i].descricao %></textarea>

                            <button class="btn btn-danger right" type="submit">Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        
    </section>

    <% include ../componentes/footer %>
</body>
</html>